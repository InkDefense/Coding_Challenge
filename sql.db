/* Each section follows this specific pattern */
CREATE TABLE Sections (
	section_id INT AUTO_INCREMENT PRIMARY KEY,
	header_text VARCHAR(255)
	paragraph_text TEXT
	image_file VARCHAR(255), /* file path for image */
	image_alt_text VARCHAR(255)
	source_id INT Auto INCREMENT PRIMARY KEY,
);

CREATE TABLE Comments (
	user_id INT AUTO_INCREMENT PRIMARY KEY,
	profile_image VARCHAR(255),	/* url for image */
	comment TEXT,
	time_posted TIMESTAMP DEFAULT CURRENT TIMESTAMP,	/* sort oldest or newest */
	likes INT	/* sort by top post or controversial */
);
